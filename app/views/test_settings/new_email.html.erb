<div class="container">
  <div class="row">
    <div class="panel-body col-md-6">
      <%= form_tag send_email_test_settings_path, :html => { :class => "form-horizontal setting" } do %>
        <div class="form-group">
          <%= label_tag :email, "Message" %>
          <%= text_area_tag :message, nil,:placeholder => 'Message', class: "form-control"%>
        </div>
        <div class="form-group">
          <%= submit_tag 'Send Email', :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
